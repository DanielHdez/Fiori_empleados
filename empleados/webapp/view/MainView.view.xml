<mvc:View xmlns:core2="sap.ui.core" controllerName="dhl.empleados.controller.MainView" 
               xmlns:mvc="sap.ui.core.mvc" 
               displayBlock="true" 
               xmlns="sap.m"
               xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <HBox id="BOXID">
                            <Label id="labelemployee"  text="{i18n>labelEmployee}" labelFor="inputemployee" class="sapUiSmallMargin" />
                            <!--<Input id="inputemployee" value="{/EmployeeId}" maxLength="6" width="200px"  class="sapUiSmallMarginEnd" liveChange="onvalidate" />-->
                            <Input id="inputemployee" value="{Countries>/EmployeeId}" maxLength="6" width="200px"  class="sapUiSmallMarginEnd"/>
                            <Label id="labelcountry"  text="{i18n>labelcountry}" labelFor="slcountry" class="sapUiSmallMargin" visible="true" />
                            <Select id="slcountry" selectedKey="{Countries>/CountryKey}" forceSelection="false" items="{Countries>/ListCountry}" visible="true">
                            <items>
                                <core:Item key="{Countries>Key}" text="{Countries>Text}"></core:Item>
                              <!--  <core:Item key= "US" text="{i18n>countryUS}"></core:Item>
                                <core:Item key= "UK" text="{i18n>countryUK}"></core:Item>
                                <core:Item key= "ES" text="{i18n>countryES}"></core:Item>-->
                            </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"></Button>
                            <Button id="btnClear" text="{i18n>btnClear}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"></Button>
                        </HBox>
                        <HBox>
                            <Panel>
                                <Button id="btnShowCity" text="{i18n>showCity}" visible="{Config>/visibleBtnShowCity}" press="onShowCity"/>
                                <Button id="btnHideCity" text="{i18n>hideCity}" visible="{Config>/visibleBtnHideCity}" press="onHideCity"/>
                                <Table id="tablaempleados" items="{/Employees}">
                                    <columns>
                                        <Column visible="{Config>/visibleId}" >
                                            <header>
                                                <Label text="{i18n>tableId}" ></Label>
                                            </header>            
                                        </Column>
                                         <Column visible="{Config>/visibleName}" >
                                            <header>
                                                <Label text="{i18n>tableName}" ></Label>
                                            </header>            
                                        </Column>
                                         <Column visible="{Config>/visibleCountry}" >
                                            <header>
                                                <Label text="{i18n>tableCountry}" ></Label>
                                            </header>            
                                        </Column>
                                         <Column visible="{Config>/visibleCity}" >
                                            <header>
                                                <Label text="{i18n>tableCity}" ></Label>
                                            </header>            
                                        </Column>    
                                    </columns>
                                    <items>
                                        <ColumnListItem type="Active" press="showPostalCode" >
                                        <cells>
                                            <Label text="{EmployeeID}"></Label>
                                            <Label text="{FirstName},{LastName}"></Label>
                                            <Label text="{Country}"></Label>
                                            <Label text="{City}"></Label>
                                        </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            
                            </Panel>
                        
                        </HBox>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>

